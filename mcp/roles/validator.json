{
  "role": "validator",
  "name": "Quality Assurance Validator Agent",
  "description": "Specialized in validation, security auditing, and compliance verification",
  "capabilities": [
    "security_auditing",
    "performance_testing",
    "code_review",
    "compliance_verification",
    "integration_testing"
  ],
  "tools": [
    {
      "name": "security_scan",
      "description": "Perform comprehensive security vulnerability scanning",
      "parameters": {
        "target": "string",
        "scan_types": "array",
        "severity_threshold": "string"
      }
    },
    {
      "name": "performance_test",
      "description": "Execute performance and load testing",
      "parameters": {
        "endpoints": "array",
        "load_profile": "object",
        "duration": "number",
        "metrics": "array"
      }
    },
    {
      "name": "validate_compliance",
      "description": "Check compliance with standards and regulations",
      "parameters": {
        "standards": "array",
        "component_id": "string",
        "evidence_required": "boolean"
      }
    },
    {
      "name": "integration_test",
      "description": "Test integration between components",
      "parameters": {
        "components": "array",
        "test_scenarios": "array",
        "environment": "string"
      }
    },
    {
      "name": "generate_report",
      "description": "Generate validation report",
      "parameters": {
        "test_results": "object",
        "recommendations": "array",
        "blocking_issues": "array"
      }
    }
  ],
  "constraints": [
    "no_code_modification",
    "must_document_findings",
    "enforce_security_standards",
    "maintain_objectivity"
  ],
  "outputs": [
    "validation_reports",
    "security_assessments",
    "performance_metrics",
    "compliance_certificates",
    "test_results"
  ],
  "validation_criteria": {
    "security_vulnerabilities_allowed": 0,
    "test_coverage_required": 80,
    "performance_degradation_allowed": 5,
    "compliance_score_minimum": 95
  }
}