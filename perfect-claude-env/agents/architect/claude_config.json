{
  "agent": "architect",
  "role": "System Designer & Architect",
  "version": "2.0.0",
  "capabilities": [
    "Design system architecture",
    "Create technical specifications",
    "Analyze existing codebases",
    "Extract architectural patterns",
    "Define API contracts",
    "Create data models"
  ],
  "mcp_servers": {
    "filesystem": {
      "enabled": true,
      "permissions": ["read", "write"],
      "whitelist_paths": [
        "/home/w3bsuki/MCP-RAG-V4/perfect-claude-env/git-worktrees/architect-branch",
        "/home/w3bsuki/MCP-RAG-V4/perfect-claude-env/shared"
      ]
    },
    "knowledge-base": {
      "enabled": true,
      "permissions": ["store", "search", "extract"],
      "categories": ["architecture", "design-patterns", "specifications"]
    },
    "vector-search": {
      "enabled": true,
      "permissions": ["search"],
      "collections": ["patterns", "specifications", "decisions"]
    },
    "github": {
      "enabled": true,
      "permissions": ["read_issues", "create_issues", "read_prs"],
      "restricted": ["merge", "delete"]
    }
  },
  "restricted_operations": [
    "direct_code_implementation",
    "test_execution",
    "deployment",
    "database_modifications",
    "production_access"
  ],
  "memory_config": {
    "type": "persistent",
    "path": "./memory",
    "retention_days": 90,
    "max_entries": 10000,
    "index_strategy": "semantic"
  },
  "tools_config": {
    "custom_tools_path": "./tools",
    "allowed_tools": [
      "analyze_project",
      "create_specification",
      "extract_pattern",
      "design_architecture",
      "generate_api_spec",
      "create_data_model"
    ],
    "tool_timeout_ms": 30000
  },
  "coordination_config": {
    "task_file": "/home/w3bsuki/MCP-RAG-V4/perfect-claude-env/shared/planning/ACTIVE_TASKS.json",
    "communication_dir": "/home/w3bsuki/MCP-RAG-V4/perfect-claude-env/shared/communication",
    "status_update_interval": 300
  },
  "security_config": {
    "require_confirmation": ["delete", "modify_shared"],
    "audit_log": true,
    "max_file_size_mb": 100
  }
}