{
  "agent": "validator",
  "role": "Quality Assurance & Validation Specialist",
  "version": "2.0.0",
  "capabilities": [
    "Validate implementations against specifications",
    "Run comprehensive test suites",
    "Perform security audits",
    "Monitor system performance",
    "Generate quality reports",
    "Ensure compliance and standards"
  ],
  "mcp_servers": {
    "filesystem": {
      "enabled": true,
      "permissions": ["read"],
      "whitelist_paths": [
        "/home/w3bsuki/MCP-RAG-V4/perfect-claude-env/git-worktrees/validator-branch",
        "/home/w3bsuki/MCP-RAG-V4/perfect-claude-env/shared",
        "/home/w3bsuki/MCP-RAG-V4/projects"
      ],
      "restricted_write_paths": [
        "/home/w3bsuki/MCP-RAG-V4/perfect-claude-env/shared/validation-reports",
        "/home/w3bsuki/MCP-RAG-V4/perfect-claude-env/git-worktrees/validator-branch/reports"
      ]
    },
    "knowledge-base": {
      "enabled": true,
      "permissions": ["search", "extract"],
      "categories": ["validation-rules", "test-patterns", "quality-metrics", "compliance"]
    },
    "vector-search": {
      "enabled": true,
      "permissions": ["search"],
      "collections": ["test-cases", "validation-results", "quality-standards"]
    },
    "github": {
      "enabled": true,
      "permissions": ["read_issues", "read_prs", "comment", "create_checks"],
      "restricted": ["merge", "delete", "admin", "create_prs"]
    },
    "testing-tools": {
      "enabled": true,
      "permissions": ["run_tests", "analyze_coverage", "generate_reports"],
      "frameworks": ["jest", "pytest", "mocha", "vitest", "playwright", "cypress"]
    },
    "monitoring-tools": {
      "enabled": true,
      "permissions": ["read_metrics", "analyze_performance", "generate_alerts"],
      "tools": ["prometheus", "grafana", "datadog", "newrelic"]
    },
    "security-tools": {
      "enabled": true,
      "permissions": ["scan", "audit", "report"],
      "tools": ["sonarqube", "snyk", "dependabot", "trivy"]
    },
    "validation-engine": {
      "enabled": true,
      "permissions": ["validate", "compare", "report"],
      "validation_types": ["spec_compliance", "code_quality", "performance", "security"]
    }
  },
  "restricted_operations": [
    "code_modification",
    "direct_implementation",
    "deployment",
    "database_write",
    "configuration_changes",
    "package_installation"
  ],
  "memory_config": {
    "type": "persistent",
    "path": "./memory",
    "retention_days": 120,
    "max_entries": 50000,
    "index_strategy": "temporal",
    "track_validation_history": true
  },
  "tools_config": {
    "custom_tools_path": "./tools",
    "allowed_tools": [
      "run_validation_suite",
      "check_spec_compliance",
      "analyze_code_quality",
      "security_scan",
      "performance_test",
      "generate_report",
      "compare_implementations",
      "validate_architecture"
    ],
    "tool_timeout_ms": 120000,
    "parallel_validation": true
  },
  "coordination_config": {
    "task_file": "/home/w3bsuki/MCP-RAG-V4/perfect-claude-env/shared/planning/ACTIVE_TASKS.json",
    "communication_dir": "/home/w3bsuki/MCP-RAG-V4/perfect-claude-env/shared/communication",
    "status_update_interval": 240,
    "validation_reports_dir": "/home/w3bsuki/MCP-RAG-V4/perfect-claude-env/shared/validation-reports",
    "approval_required_for": ["production_release", "critical_changes"]
  },
  "validation_config": {
    "test_coverage_threshold": 80,
    "performance_benchmarks": {
      "response_time_ms": 200,
      "cpu_usage_percent": 70,
      "memory_usage_mb": 512
    },
    "security_policies": {
      "vulnerability_threshold": "medium",
      "dependency_check": true,
      "code_scanning": true
    },
    "quality_gates": {
      "code_smells": 10,
      "technical_debt_ratio": 0.05,
      "complexity_threshold": 15
    }
  },
  "reporting_config": {
    "formats": ["json", "html", "markdown"],
    "automated_reports": true,
    "report_frequency": "on_validation",
    "include_screenshots": true,
    "track_trends": true
  },
  "security_config": {
    "require_confirmation": ["approve_release", "override_validation"],
    "audit_log": true,
    "max_file_size_mb": 50,
    "read_only_mode": true,
    "validation_signatures": true
  }
}