# MCP-RAG-V4 Environment Configuration
# Copy this to .env and update values for your environment

# Core Services
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MCP Server Ports
ADMIN_AGENT_PORT=8080
FILESYSTEM_PORT=8001
VECTOR_SEARCH_PORT=8002
KNOWLEDGE_BASE_PORT=8003
COORDINATION_HUB_PORT=8004
GIT_OPERATIONS_PORT=8005
METRICS_PORT=8006
TYPESCRIPT_PORT=3000
DASHBOARD_PORT=8000

# Security
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# API Keys (for production)
ANTHROPIC_API_KEY=
GITHUB_TOKEN=
OPENAI_API_KEY=

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
ADMIN_ROUTING_MODEL=claude-3-haiku-20240307
ADMIN_ORCHESTRATION_MODEL=claude-3-opus-20240229

# Performance
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT_SECONDS=300
COORDINATION_INTERVAL_SECONDS=5
CACHE_TTL_SECONDS=3600

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=false

# Paths
PROJECT_ROOT=/home/w3bsuki/MCP-RAG-V4
KNOWLEDGE_ROOT=/home/w3bsuki/MCP-RAG-V4/rag-system/knowledge
SHARED_ROOT=/home/w3bsuki/MCP-RAG-V4/shared
WORKTREES_ROOT=/home/w3bsuki/MCP-RAG-V4/git-worktrees

# Feature Flags
ENABLE_HAIKU_ROUTING=true
ENABLE_CROSS_ENCODER=true
ENABLE_REDIS_QUEUE=false
ENABLE_DYNAMIC_INGESTION=false