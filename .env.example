# MCP-RAG-V4 Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=development
PYTHON_ENV=development

# Database URLs
QDRANT_URL=http://localhost:6333
REDIS_URL=redis://localhost:6379

# Monitoring
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# API Keys (replace with your actual keys)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Security (will be auto-generated by bootstrap script)
JWT_SECRET=GENERATED_JWT_SECRET
WEBHOOK_SECRET=GENERATED_WEBHOOK_SECRET

# MCP Server Ports
MCP_KNOWLEDGE_BASE_PORT=8080
MCP_VECTOR_SEARCH_PORT=8081
MCP_FILESYSTEM_SECURE_PORT=8082
MCP_GIT_OPERATIONS_PORT=8084

# Metrics Ports
NODE_METRICS_PORT=9100
PYTHON_METRICS_PORT=9200

# Security Configuration
SECURITY_CONFIG_PATH=./perfect-claude-env/config/security-config.json
AUDIT_LOG_PATH=./logs/audit.log

# RAG Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CACHE_TTL=3600
MAX_SEARCH_RESULTS=10

# Grafana Configuration
GF_SECURITY_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false